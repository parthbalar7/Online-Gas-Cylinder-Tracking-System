<section class="status">
    <div class="container mx-auto">
        <div class="status-box w-full lg:w-2/3 mx-auto">
            <div class="flex items-center justify-between mb-12">
                <h1 class="text-xl">Track Delivery Status</h1>
                <h6 class="bg-white py-1 rounded-full text-green-600 text-xs px-4"><%= order._id %></h6>
                <input id="hiddenInput" type="hidden" value="<%= JSON.stringify(order) %>" >
            </div>
            <ul>
                <li class="status-line text-sm md:text-xl pb-16" data-status="order_placed"><span>Order Placed</span></li>
                <li class="status-line text-sm md:text-xl pb-16" data-status="confirmed"><span>Order Confirmed</span></li>
                <li class="status-line text-sm md:text-xl pb-16" data-status="dispatched"><span>Dispatched</span></li>
                <li class="status-line text-sm md:text-xl pb-16" data-status="out_for_delivery"><span>On the Way</span></li>
                <li class="status-line text-sm md:text-xl" data-status="completed"><span>Completed</span></li>
            </ul>
        </div>
    </div>
</section>